<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EBEF"
    tools:context=".MainActivity">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="16dp">

        <Switch
            android:id="@+id/main_SWT_flash"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Flash ON"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/main_LBL_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="degree"
            android:layout_weight="1"
            android:textColor="#E91E63"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/main_IMG_compass"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_weight="3"
            android:src="@drawable/compass_img" />

        <TextView
            android:id="@+id/main_LBL_enterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Password:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/main_EDT_Password"
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_enter"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Permission"
            android:textColor="#E91E63"
            app:cornerRadius="50dp"
            app:strokeColor="#E91E63"

            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>